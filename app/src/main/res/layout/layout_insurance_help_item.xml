<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/shape_add_insurance_background"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/insurance_help_item_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="0.9"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/insurance_help_title"
            android:textColor="@color/dark_violet"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/insurance_help_item_expand_ib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_up" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/insurance_help_item_expanded_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/insurance_help_item_expanded_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/dark_gray_violet"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>