<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/operation_category_icon_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:src="@drawable/ic_exp_cat_battery" />

            <TextView
                android:id="@+id/operation_item_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/dark_gray_violet"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/operation_item_category_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_regular"
                android:lines="1"
                android:text="@string/expense_category_battery"
                android:textColor="@color/dark_violet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/operation_item_details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/expenses_new_note_hint"
                android:textColor="@color/dark_gray_violet"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/operation_item_category_sum_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.75"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:lines="1"
            android:text="@string/expenses_list_sum_placeholder"
            android:textColor="@color/dark_violet"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/operation_item_delete_ib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_delete_red" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
</LinearLayout>