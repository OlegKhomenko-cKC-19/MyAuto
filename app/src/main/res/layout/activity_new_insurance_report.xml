                    android:background="@drawable/shape_edittext"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="start"
                    android:hint="@string/new_insurance_report_crash_guilty_hint"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray_violet"
                    tools:ignore="TextFields,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/new_insurance_report_crash_guilty_details"
                    android:textColor="@color/dark_violet_75"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/new_insurance_report_guilty_details_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/shape_edittext"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="start"
                    android:hint="@string/new_insurance_report_crash_guilty_details_hint"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray_violet"
                    tools:ignore="TextFields,TouchTargetSizeCheck" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/new_insurance_report_was_fixed"
                android:textColor="@color/dark_violet_75"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/shape_edittext"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <RadioGroup
                    android:id="@+id/new_insurance_report_fixed_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/new_insurance_report_was_fixed_yes_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/dark_violet"
                        android:checked="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/yes"
                        android:textColor="@color/dark_violet" />

                    <RadioButton
                        android:id="@+id/new_insurance_report_was_fixed_no_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:buttonTint="@color/dark_violet"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/no"
                        android:textColor="@color/dark_violet" />
                </RadioGroup>
